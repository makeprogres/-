.rankingBox{
  margin: 0 20rpx;
  border-top: 1rpx solid #ddd;
}
.rankingBox .topBox{
  background-color: #fff;
  padding: 10rpx 10rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.rankingBox .text::before{
  width: 8rpx;
  height: 30rpx;
  display: block;
  content: "";
  background: #d43c33;
  position: absolute;
  top: 18rpx;
  left: 0;
}
.rankingBox .txt-1{
  color: #d43c33;
  margin:0 20rpx;
  font-weight:bold
}
.rankingBox .txt-2{
  font-size: 25rpx;
  color: #bababa;

}
.more{
    font-size: 26rpx;
    margin: 6rpx 0;
    color: #444;
}


.ranking{
  display: flex;
  width: 100%;
  height: 200rpx;
  background: #ffb;
  margin: 5rpx 5rpx;
}
.ranking .imgBox{
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx 20rpx 40rpx 20rpx;
}
.ranking image{
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;

}
.textBox{
  width: 500rpx;
  margin: 10rpx 0;
  position: relative;
}
.textBox .departments{
  font-size: 25rpx;
  margin-left: 30rpx;
  color: #aaa;
}
.textBox .declarationName{
  font-size: 26rpx;
  margin-top: 5rpx;
}
.textBox .txt{
  margin-top: 2rpx;
  font-size: 22rpx;
  white-space: wrap;
}
.textBox .achievement{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 25rpx;
}
.textBox .achievement text{
  font-size: 40rpx;
  color: #f83;
}
